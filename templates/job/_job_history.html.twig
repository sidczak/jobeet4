{% if historyJobs %}
    <div class="card bg-light mb-3">
        <div class="card-body">
            Recent viewed jobs:
            {% for historyJob in historyJobs %}
                <a href="{{ path('job_show', {id: historyJob.id, company: historyJob.companySlug, position: historyJob.positionSlug, location: historyJob.locationSlug}) }}">{{ historyJob.position ~ ' - ' ~ historyJob.company}}</a>{{ loop.last ? '' : ', ' }}
            {% endfor %}
        </div>
    </div>
{% endif %}
